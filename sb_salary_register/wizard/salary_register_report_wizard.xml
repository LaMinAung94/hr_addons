<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_salary_register_report_wizard" model="ir.ui.view">
        <field name="name">salary.register.report.wizard.form</field>
        <field name="model">salary.register.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Salary Register Report Wizard">
                <group col="4">
                    <field name="month"/>
                    <field name="year"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_report_htm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_salary_register_report_wizard" model="ir.actions.act_window">
        <field name="name">Salary Register Report</field>
        <field name="res_model">salary.register.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_salary_register_report_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_payroll_custom_reports"
              name="Custom Reports"
              sequence="90"
              parent="hr_payroll_community.menu_hr_payroll_community_root"/>

    <menuitem id="menu_salary_register_report"
              name="Salary Register Report"
              sequence="74"
              action="action_salary_register_report_wizard"
              parent="menu_payroll_custom_reports"/>

</odoo>
