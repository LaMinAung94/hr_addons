<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_geospatial" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.attendance.geospatial</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[contains(@class, 'settings')]" position="inside">
                <div class="row mt16 o_settings_container" data-key="hr_attendance_geospatial">
                    <div class="col-12 col-lg-6 o_setting_box"
                         title="Check in/out user only when employee in geo table polygon">
                        <div class="o_setting_left_pane">
                            <field name="geospatial_access"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="geospatial_access" class="o_form_label">Geospatial access</label>
                            <div class="text-muted">
                                Use Geospatial table access to check in/out
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>